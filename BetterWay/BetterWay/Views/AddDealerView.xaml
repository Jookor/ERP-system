<Window x:Class="BetterWay.Views.AddDealerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterWay.Views"
        mc:Ignorable="d"
        Title="Lisää jälleenmyyjä" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Jälleenmyyjän nimi: " />
            <TextBox x:Name="txbDealer" Margin="5"/>
            <Label Content="Osoite: "/>
            <TextBox x:Name="txbAddress" Margin="5"/>
            <Label Content="Kaupunki:" />
            <TextBox x:Name="txbCity" Margin="5"/>
            <Label Content="Postinumero:" />
            <TextBox x:Name="txbPostcode" Margin="5"/>
            <Label Content="Puhelin numero:"/>
            <TextBox x:Name="txbPhone" Margin="5"/>
            <Label Content="Email: " />
            <TextBox x:Name="txbEmail" Margin="5"/>
            <Button x:Name="btnAddDealer" Content="Lisää jälleenmyyjä" Margin="5" Click="BtnAddDealer_Click"/>
        </StackPanel>
    </Grid>
</Window>
